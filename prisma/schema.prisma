// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  avatarUrl     String?
  isSubscription Boolean  @default(false)
  
  coupleId      String?
  couple        Couple?   @relation(fields: [coupleId], references: [id])

  notes         Note[]
  initiatedSessions DevotionalSession[] @relation("InitiatedSessions")
  sessionProgress   DevotionalSessionUserProgress[]
  subscriptions Subscription[]

  createdAt     DateTime @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt @db.Timestamptz(6)
}

model Couple {
  id              String    @id @default(cuid())
  code            String    @unique // New field for the unique couple code
  encryptionKey   String?   // Chave de criptografia do casal (criptografada com chave mestra)
  level           Int       @default(1)
  xp              Int       @default(0)
  lastGeneratedAt DateTime? @db.Timestamptz(6) // Ãšltima vez que gerou um devocional
  createdAt       DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime  @updatedAt @db.Timestamptz(6)
  users           User[]
  weeklyProgress  WeeklyProgress[]
  devotionalSessions DevotionalSession[]
}

model DevotionalTemplate {
  id                   String   @id @default(cuid())
  scriptureReference   String   @unique
  theme                String
  culturalContext      String
  literaryContext      String
  christConnection     String
  applicationQuestions String
  scriptureText        String?
  isAiGenerated        Boolean  @default(true)
  sessions             DevotionalSession[]

  createdAt            DateTime @default(now()) @db.Timestamptz(6)
  updatedAt            DateTime @updatedAt @db.Timestamptz(6)
}

model DevotionalSession {
  id                  String   @id @default(cuid())
  date                DateTime @default(now()) @db.Timestamptz(6)
  status              String
  notes               Note[]
  
  template            DevotionalTemplate @relation(fields: [templateId], references: [id])
  templateId          String
  
  couple              Couple   @relation(fields: [coupleId], references: [id])
  coupleId            String
  initiatedBy         User     @relation("InitiatedSessions", fields: [initiatedByUserId], references: [id])
  initiatedByUserId   String
  userProgress        DevotionalSessionUserProgress[]

  createdAt           DateTime @default(now()) @db.Timestamptz(6)
  updatedAt           DateTime @updatedAt @db.Timestamptz(6)

  @@index([coupleId, date])
  @@index([templateId])
}

model Note {
  id          String   @id @default(cuid())
  content     String
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)
  session     DevotionalSession @relation(fields: [sessionId], references: [id])
  sessionId   String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model WeeklyProgress {
  id                String   @id @default(cuid())
  weekStart         DateTime @db.Timestamptz(6)
  weekEnd           DateTime @db.Timestamptz(6)
  daysCompleted     String   // Storing as a comma-separated string of booleans
  spiritualGrowthXP Int
  couple            Couple   @relation(fields: [coupleId], references: [id])
  coupleId          String

  @@unique([coupleId, weekStart])
}

model DevotionalSessionUserProgress {
  id          String   @id @default(cuid())
  session     DevotionalSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId   String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  status      String   @default("IN_PROGRESS")
  completedAt DateTime? @db.Timestamptz(6)

  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)

  @@unique([sessionId, userId])
  @@index([sessionId])
  @@index([userId])
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startDate   DateTime @db.Timestamptz(6)
  expiresAt   DateTime @db.Timestamptz(6)

  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)

  @@index([userId])
  @@index([expiresAt])
}